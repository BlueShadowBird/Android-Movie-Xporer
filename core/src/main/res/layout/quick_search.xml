<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/quick_search_icon"
        android:layout_width="64dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_default_image"
        android:contentDescription="@string/icon" />

    <TextView
        android:id="@+id/quick_search_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/quick_search_icon"
        app:layout_constraintTop_toTopOf="@id/quick_search_icon"
        android:textStyle="bold"
        tools:text="Text Name" />

    <TextView
        android:id="@+id/quick_search_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/quick_search_icon"
        app:layout_constraintTop_toBottomOf="@id/quick_search_name"
        tools:text="Text Description" />

</androidx.constraintlayout.widget.ConstraintLayout>
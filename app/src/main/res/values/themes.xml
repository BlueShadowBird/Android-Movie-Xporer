<resources>
    <!-- Base application theme. -->
    <style name="Theme.MovieXplorer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Movie">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
    <style name="Movie.TagLine">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Movie.Image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:adjustViewBounds">true</item>
    </style>
    <style name="Movie.Genre">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="Movie.UserScore">
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Movie.Field">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="Movie.Field.Label">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Movie.Field.Value">
    </style>
    <style name="Movie.Field.Overview">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>

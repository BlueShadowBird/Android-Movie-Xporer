<resources>
    <style name="About">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="About.Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">64dp</item>
        <item name="android:background">#0d253f</item>
    </style>

    <style name="About.MovieXplorer">
        <item name="android:background">#0d253f</item>
    </style>

    <style name="About.TMDBAttribution">
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">#01b4e4</item>
    </style>

    <style name="About.TMDBImage">
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="About.PrivacyPolicy">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="About.PrivacyPolicy.Link">
        <item name="android:textStyle">bold</item>
    </style>
</resources>
